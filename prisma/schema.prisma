generator client {
  provider = "prisma-client-js"
  //previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Madera {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  cantidad Int
}

model Piedra {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  cantidad Int
}

model Torretas {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivel Int
}
model Ayuntamiento {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivel Int
}
model Muros {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivel Int
}
model Herreria {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivel Int
  maderaNecesaria Int
  piedraNecesaria Int
}

model Cantera {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivelHerriaNecesario Int
  nivel Int     
}
model Maderera {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivel Int
  maderaNecesaria Int
  piedraNecesaria Int
}
model Bosque {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  nivelMadereraNecesario Int
  nivel Int
}
